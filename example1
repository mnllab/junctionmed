    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            return Array.isArray(label) ? label.join(' ') : label;
        };
        const commonPlugins = { tooltip: { callbacks: { title: tooltipTitleCallback } } };

        const agingCtx = document.getElementById('agingTrendChart').getContext('2d');
        new Chart(agingCtx, {
            type: 'line',
            data: {
                labels: ['2000', '2010', '2020', '2025', '2035', '2045'],
                datasets: [{
                    label: '고령인구(65세 이상) 비율 (%)',
                    data: [7.2, 11.0, 15.7, 20.6, 28.7, 37.0],
                    borderColor: '#E07A5F',
                    backgroundColor: 'rgba(224, 122, 95, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: { responsive: true, maintainAspectRatio: false, plugins: commonPlugins, scales: { y: { beginAtZero: true } } }
        });

        const sentimentData = {
            labels: ['업무 효율성 증대', '돌봄 서비스 질 향상', '객관적 데이터 기반 의사결정', '높은 초기 도입 비용', '개인정보보호 및 보안 우려', '디지털 기기 사용의 어려움'],
            opportunities: [85, 78, 72, 0, 0, 0],
            barriers: [0, 0, 0, 88, 80, 60]
        };
        const sentimentCtx = document.getElementById('sentimentChart').getContext('2d');
        const sentimentChart = new Chart(sentimentCtx, {
            type: 'bar',
            data: {
                labels: sentimentData.labels,
                datasets: [
                    { label: '기회 요인', data: sentimentData.opportunities, backgroundColor: '#81B29A' },
                    { label: '장벽 요인', data: sentimentData.barriers, backgroundColor: '#F28F3B' }
                ]
            },
            options: { responsive: true, maintainAspectRatio: false, indexAxis: 'y', plugins: { ...commonPlugins, legend: { display: false } }, scales: { x: { stacked: true }, y: { stacked: true } } }
        });

        document.getElementById('sentiment-filter-buttons').addEventListener('click', (e) => {
            if (e.target.tagName === 'BUTTON') {
                const filter = e.target.dataset.filter;
                sentimentChart.data.datasets[0].data = (filter === 'all' || filter === 'opportunities') ? sentimentData.opportunities : [0,0,0,0,0,0];
                sentimentChart.data.datasets[1].data = (filter === 'all' || filter === 'barriers') ? sentimentData.barriers : [0,0,0,0,0,0];
                sentimentChart.update();
            }
        });

        document.getElementById('roadmap-container').addEventListener('click', (e) => {
            if (e.target.tagName === 'H4' && e.target.dataset.target) {
                const targetId = e.target.dataset.target;
                const content = document.getElementById(targetId);
                const isExpanded = content.style.maxHeight && content.style.maxHeight !== '0px';

                document.querySelectorAll('.timeline-item-content').forEach(el => el.style.maxHeight = '0px');

                if (!isExpanded) {
                    content.style.maxHeight = content.scrollHeight + 'px';
                }
            }
        });

        const sections = document.querySelectorAll('section[id]');
        const navLinks = document.querySelectorAll('.nav-link');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    navLinks.forEach(link => {
                        link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                    });
                }
            });
        }, { rootMargin: '-50% 0px -50% 0px' });
        sections.forEach(sec => observer.observe(sec));
    });
    </script>
</body>
</html>
